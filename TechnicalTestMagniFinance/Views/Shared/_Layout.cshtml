<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - College Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="college">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="overflow: hidden;position: fixed;top: 0;width: 100%;">
        <a class="navbar-brand" href="#">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Courses", "Course", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Subjects", "Subject", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Students", "Student", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Teachers", "Teacher", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Grades", "Enrollment", "Home", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content" style="margin-top: 30px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - College Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
