
@{
    ViewBag.Title = "Enrollment";
}

<h2>Enrollments</h2>

<div class="container" ng-controller="subjectController">
    <div class="panel-body">
        <button type="button" class="btn btn-info" data-target="#addEnrollment" data-toggle="modal" ng-click="clearData()">
            Enroll Student
        </button>
    </div>

    <table class="table table-bordered">
        <thead style="background-color: slateblue;">
            <tr>
                <th>Subjects</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="subj in Subjects">
                <td>{{subj.Name}}</td>

                <td style="width: 200px">
                    <a href="#" class="btn btn-success" data-target="#showStudents"
                       data-toggle="modal" ng-click="getSubject(subj.Id)">View</a>
                </td>

            </tr>
        </tbody>
    </table>


    @* BEGIN MODAL - ADD STUDENT *@
    <div class="modal" id="addEnrollment" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">New Enrollment</h3>
                </div>
                <div class="modal-body" style="margin: auto; width: 50%; ">
                    <form class="form-horizontal" name="addEnrollmentForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="Id" type="hidden" placeholder="Id" />
                        </div>

                        <div class="form-group">
                            <label class="text-info"> Name</label>
                            <input class="form-control" type="text" name="nome" ng-model="enrollment.Name" placeholder="Enrollment Name" required />
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Birthday</label>
                            <input class="form-control" type="date" name="Birthday" ng-model="enrollment.Birthday" placeholder="YYYY-MM-DD" required />
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Registration Number</label>
                            <input class="form-control" type="text" name="nome" ng-model="enrollment.Reg_number" placeholder="Registration Number" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="insertEnrollment()">Add</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="clearData()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - ADD STUDENT *@

    @* BEGIN MODAL - UPDATE STUDENT *@
    <div class="modal" id="showStudents" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">Student List</h3>
                </div>
                <div class="modal-body" style="margin-left: 20px">
                    <table class="table table-bordered">
                        <thead style="background-color: slateblue;">
                            <tr>
                                <th>Student</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="stud in Students">
                                <td>{{stud.Name}}</td>

                                <td style="width: 30px">
                                    <a href="#" class="btn btn-danger" data-target="#showStudents"
                                       data-toggle="modal" ng-click="updateScopeEnrollment(stud.Id)">Unenroll</a>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - UPDATE STUDENT*@

</div>

@section scripts {
    <script src="~/AngularJSApp/College/Modulejs.js"></script>
    <script src="~/AngularJSApp/College/Subject/SubjectController.js"></script>
    <script src="~/AngularJSApp/College/Subject/SubjectService.js"></script>
    <script src="~/AngularJSApp/College/Teacher/TeacherService.js"></script>
    <script src="~/AngularJSApp/College/Course/CourseService.js"></script>

}