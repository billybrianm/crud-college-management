
@{
    ViewBag.Title = "Course";
}

<h2>Courses</h2>

<div class="container" ng-controller="courseController" ng-cloak>

    @* SUCCESS AND ERROR MESSAGES *@
    <div class="alert alert-success alert-dismissible" ng-show="success">
        <strong>Success!</strong> {{successMessage}}
        <a href="#" class="btn-close" data-dismiss="alert"></a>
    </div>
    <div class="alert alert-danger alert-dismissible" ng-show="error">
        <strong>Error!</strong> {{errorMessage}}
        <a href="#" class="btn-close" data-dismiss="alert"></a>
    </div>
    @* --------------------------- *@

    <div class="panel-body">
        <button type="button" class="btn btn-primary" data-target="#addCourse" data-toggle="modal" ng-click="clearData()">
            Add Course
        </button>
    </div>

    <table class="table table-bordered">
        <thead style="background-color: crimson;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="course in Courses">
                <td>{{course.ID}}</td>
                <td>{{course.Name}}</td>

                <td style="width: 200px">
                    <a href="#" class="btn btn-primary" data-target="#updateCourse"
                       data-toggle="modal" ng-click="updateScopeCourse(course.ID)">Update</a>
                    <a href="#" class="btn btn-danger" ng-click="deleteCourse(course.ID)">Delete</a>
                </td>

            </tr>
        </tbody>
    </table>


    @* BEGIN MODAL - ADD COURSE *@
    <div class="modal" id="addCourse" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>New Course</h3>
                </div>
                <div class="modal-body" style="margin: auto; width: 50%; ">
                    <form class="form-horizontal" name="addCourseForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="ID" type="hidden" placeholder="ID" />
                        </div>

                        <div class="form-group">
                            <label> Name</label>
                            <input class="form-control" type="text" name="nome" ng-model="course.Name" placeholder="Course Name" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="insertCourse()">Add</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="clearData()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - ADD COURSE *@

    @* BEGIN MODAL - UPDATE COURSE *@
    <div class="modal" id="updateCourse" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Update Course</h3>
                </div>
                <div class="modal-body" style="margin-left: 20px">
                    <form class="form-horizontal" name="updateCourseForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="ID" ng-model="updateCourseID" type="hidden" placeholder="ID" />
                        </div>
                        <div class="form-group">
                            <label> Name</label>
                            <input class="form-control" name="Name" ng-model="course.Name" type="text" placeholder="Name" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUpdate" data-dismiss="modal" ng-click="updateCourse()">
                        Update
                    </button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - UPDATE COURSE*@

</div>

@section scripts {
    <script src="~/AngularJSApp/College/Modulejs.js"></script>
    <script src="~/AngularJSApp/College/Course/CourseController.js"></script>
    <script src="~/AngularJSApp/College/Course/CourseService.js"></script>
    <script src="~/AngularJSApp/College/SignalR.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

}