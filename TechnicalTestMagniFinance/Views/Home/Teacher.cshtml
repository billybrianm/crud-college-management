
@{
    ViewBag.Title = "Teacher";
}

<h2>Teachers</h2>

<div class="container" ng-controller="teacherController" ng-cloak>
    @* SUCCESS AND ERROR MESSAGES *@
    <div class="alert alert-success alert-dismissible" ng-show="success">
        <strong>Success!</strong> {{successMessage}}
        <a href="#" class="btn-close" data-dismiss="alert"></a>
    </div>
    <div class="alert alert-danger alert-dismissible" ng-show="error">
        <strong>Error!</strong> {{errorMessage}}
        <a href="#" class="btn-close" data-dismiss="alert"></a>
    </div>
    @* --------------------------- *@

    <div class="panel-body">
        <button type="button" class="btn btn-primary" data-target="#addTeacher" data-toggle="modal" ng-click="clearData()">
            Add Teacher
        </button>
    </div>

    <table class="table table-bordered">
        <thead style="background-color: aquamarine;">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Birthday</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="teach in Teachers">
                <td>{{teach.ID}}</td>
                <td>{{teach.Name}}</td>
                <td>{{teach.Birthday}}</td>
                <td>{{teach.Salary}}</td>

                <td style="width: 200px">
                    <a href="#" class="btn btn-primary" data-target="#updateTeacher"
                       data-toggle="modal" ng-click="updateScopeTeacher(teach.ID)">Update</a>
                    <a href="#" class="btn btn-danger" ng-click="deleteTeacher(teach.ID)">Delete</a>
                </td>

            </tr>
        </tbody>
    </table>


    @* BEGIN MODAL - ADD TEACHER *@
    <div class="modal" id="addTeacher" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>New Teacher</h3>
                </div>
                <div class="modal-body" style="margin: auto; width: 50%; ">
                    <form class="form-horizontal" name="addTeacherForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="ID" type="hidden" placeholder="ID" />
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="text" name="nome" ng-model="teacher.Name" placeholder="Teacher Name" required />
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="date" name="Birthday" ng-model="teacher.Birthday" placeholder="YYYY-MM-DD" required />
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="nome" ng-model="teacher.Salary" placeholder="Salary" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="insertTeacher()">Add</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="clearModal()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - ADD TEACHER *@

    @* BEGIN MODAL - UPDATE TEACHER *@
    <div class="modal" id="updateTeacher" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Update Teacher</h3>
                </div>
                <div class="modal-body" style="margin-left: 20px">
                    <form class="form-horizontal" name="updateTeacherForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="ID" ng-model="updateTeacherID" type="hidden" placeholder="ID" />
                        </div>
                        <div class="form-group">
                            <label> Name</label>
                            <input class="form-control" name="Name" ng-model="teacher.Name" type="text" placeholder="Name" required />
                        </div>
                        <div class="form-group">
                            <label> Birthday</label>
                            <input class="form-control" name="Birthday" ng-model="teacher.Birthday" type="date" placeholder="Birthday" required />
                        </div>
                        <div class="form-group">
                            <label> Salary</label>
                            <input class="form-control" name="Salary" ng-model="teacher.Salary" type="text" placeholder="Salary" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUpdate" data-dismiss="modal" ng-click="updateTeacher()">
                        Update
                    </button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @* END MODAL - UPDATE TEACHER *@

</div>

@section scripts {
    <script src="~/AngularJSApp/College/Modulejs.js"></script>
    <script src="~/AngularJSApp/College/Teacher/TeacherController.js"></script>
    <script src="~/AngularJSApp/College/Teacher/TeacherService.js"></script>
    <script src="~/AngularJSApp/College/SignalR.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}